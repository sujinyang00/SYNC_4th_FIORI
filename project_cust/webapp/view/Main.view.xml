<mvc:View controllerName="projectcust.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:cards="sap.f.cards"
	xmlns:l="sap.ui.layout"
	xmlns:lf="sap.ui.layout.form"
	height="100%">
    <Page id="page" title="{i18n>title}" class="sapUiResponsiveContentPadding">
        <lf:SimpleForm
			labelSpanL="6"
			labelSpanM="6"
			editable="true"
			layout="ResponsiveGridLayout">
			<Label text="Number of pages to display" />
			<Input
				type="Number"
				value="4"
			liveChange=".onNumberOfPages"
				width="320px" />
			<Label text="Scroll mode - visible pages:" />
			<Switch
				state="false"
				tooltip="Toggles the scrollMode property of the carousel"
				change=".OnScrollModeChange" />
		</lf:SimpleForm>
		<Carousel
			id="carouselSample"
			height="auto"
			pages="{
				path: 'products>/ProductListEntitySet'
			}">
			<customLayout>
				<CarouselLayout visiblePagesCount="{settings>/pagesCount}"/>
			</customLayout>
			<ScrollContainer 
				vertical="false" 
				horizontal="false" 
				class="sapUiContentPadding">

				<f:Card>
					<f:header>
						<cards:Header
							title="{products>Matname}"
							subtitle="{products>Matcode}"
							iconSrc="{products>Matimg}"
							iconDisplayShape="Square" />
					</f:header>
					<f:content>
						<l:VerticalLayout class="sapUiContentPadding" width="100%">
							<l:BlockLayout>
								<l:BlockLayoutRow>
									<l:BlockLayoutCell title="Main Information" width="1">
										<HBox class="sapUiTinyMarginBottom">
											<Label text="자재명 :" />
										</HBox>
										<HBox class="sapUiSmallMarginBottom">
											<Text text="{products>Matname}" />
										</HBox>
										<HBox class="sapUiTinyMarginBottom">
											<Label text="판매가 :" />
										</HBox>
										<HBox class="sapUiSmallMarginBottom">
											<Text text="{products>Matprice}" />
										</HBox>		
                                        <HBox class="sapUiTinyMarginBottom">
											<Label text="5년 렌탈 시 월 렌탈료 :" />
										</HBox>
										<HBox class="sapUiSmallMarginBottom">
											<Text text="{products>Mb1}" />
										</HBox>		
                                        <HBox class="sapUiTinyMarginBottom">
											<Label text="7년 렌탈 시 월 렌탈료 :" />
										</HBox>
										<HBox class="sapUiSmallMarginBottom">
											<Text text="{products>Mb2}" />
										</HBox>										
									</l:BlockLayoutCell>

									
								</l:BlockLayoutRow>
							</l:BlockLayout>
						</l:VerticalLayout>
					</f:content>
				</f:Card>
			</ScrollContainer>
		</Carousel>
    </Page>
</mvc:View>
