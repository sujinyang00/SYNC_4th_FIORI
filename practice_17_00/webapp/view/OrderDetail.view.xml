<mvc:View controllerName="practice1700.controller.OrderDetail"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m">

    <Page id="page" title="{i18n>title}" showNavButton="true" navButtonPress="onNavBack">
    <!-- <Text id="idOrderID_Detail"/> -->
        <f:Form id="idForm"
            editable="true">
            <f:title>
                <core:Title text="Order Detail" />
            </f:title>
            <f:layout>
                <f:ColumnLayout
                    columnsM="2"
                    columnsL="3"
                    columnsXL="4"
                />
            </f:layout>
            <f:formContainers>
                <f:FormContainer title="Orders">
                    <f:formElements>					
                        <f:FormElement label="OrderID">
                            <f:fields>
                                <Text text="{OrderID}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="CustomerID">
                            <f:fields>
                                <Text text="{CustomerID}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="EmployeeID">
                            <f:fields>
                                <Text text="{EmployeeID}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="OrderDate">
                            <f:fields>
                                <Text text="{
                                    path: 'OrderDate',
                                    formatter : '.fnDateFormatter'
                                    }"/>
                            </f:fields>
                        </f:FormElement>						
                        <f:FormElement label="RequiredDate">
                            <f:fields>
                                <Text text="{
                                    path: 'RequiredDate',
                                    formatter: '.fnDateFormatter'}"/>
                            </f:fields>
                        </f:FormElement>						
                        <f:FormElement label="ShippedDate">
                            <f:fields>
                                <Text text="{
                                    path: 'ShippedDate',
                                    formatter: '.fnDateFormatter'}"/>
                            </f:fields>
                        </f:FormElement>						
                        <f:FormElement label="ShipVia">
                            <f:fields>
                                <Text text="{ShipVia}"/>
                            </f:fields>
                        </f:FormElement>						
                        <f:FormElement label="Freight">
                            <f:fields>
                                <Text text="{Freight}"/>
                            </f:fields>
                        </f:FormElement>						
                        <f:FormElement label="ShipName">
                            <f:fields>
                                <Text text="{ShipName}"/>
                            </f:fields>
                        </f:FormElement>						
                        <f:FormElement label="ShipAddress">
                            <f:fields>
                                <Text text="{ShipAddress}"/>
                            </f:fields>
                        </f:FormElement>						
                        <f:FormElement label="ShipCity">
                            <f:fields>
                                <Text text="{ShipCity}"/>
                            </f:fields>
                        </f:FormElement>						
                        <f:FormElement label="ShipRegion">
                            <f:fields>
                                <Text text="{ShipRegion}"/>
                            </f:fields>
                        </f:FormElement>						
                        <f:FormElement label="ShipPostalCode">
                            <f:fields>
                                <Text text="{ShipPostalCode}"/>
                            </f:fields>
                        </f:FormElement>						
                        <f:FormElement label="ShipCountry">
                            <f:fields>
                                <Text text="{ShipCountry}"/>
                            </f:fields>
                        </f:FormElement>						
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>                
        </f:Form> 

        

    </Page>
</mvc:View>
