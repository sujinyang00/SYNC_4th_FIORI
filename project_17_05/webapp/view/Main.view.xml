        <Panel headerText="Grid" expandable="true" expanded="false">
            <!-- headerToolbar로 headerText 대체 가능. 대신 toolbar쓰면 headerText안먹힘 -->
            <!-- <headerToolbar>
                <Toolbar >
                    <Text text="ToolBar title"></Text>
                    <ToolbarSpacer ></ToolbarSpacer>
                    <Button ></Button>
                </Toolbar>
            </headerToolbar> -->
            
            <l:Grid >
                <VBox >
                    <layoutData>
                        <l:GridData span="XL6 L3 M6 S12"/>
                    </layoutData>
                    <Input value="Input 1 - L3"/>
                </VBox>
                <VBox >
                    <layoutData>
                        <l:GridData span="XL6 L3 M6 S12"/>
                    </layoutData>
                    <Input value="Input 2 - L3"/>
                </VBox>
                <VBox >      
                    <layoutData>
                        <l:GridData span="XL6 L6 M6 S12"/>
                    </layoutData>
                    <t:Table
                        rows="{/ProductCollection}"
                        selectionMode="MultiToggle"
                        paste="onPaste"
                        ariaLabelledBy="title">
                        <t:extension>
                            <OverflowToolbar style="Clear">
                                <Title id="title" text="Products"/>
                            </OverflowToolbar>
                        </t:extension>
                        <t:columns>
                            <t:Column width="11rem">
                                <Label text="Product Name" />
                                <t:template>
                                    <Text text="{Name}" wrapping="false" />
                                </t:template>
                            </t:Column>                        
                        </t:columns>
                    </t:Table>
                </VBox>
