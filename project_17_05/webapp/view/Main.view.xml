<mvc:View controllerName="project1705.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:t="sap.ui.table"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <Panel  headerText="VerticalLayout" expandable="true" expanded="false">
                <headerToolbar>
                    <Toolbar >
                        <Text text="VerticalLayout"></Text>
                        <ToolbarSpacer ></ToolbarSpacer>
                        <Button icon="sap-icon://paper-plane"></Button>
                    </Toolbar>
                </headerToolbar>
            <l:VerticalLayout >  <!-- VerticalLayout : 가로 정렬 -->
                <!-- Input, Text, Stepinput, Select, DatePicker-->
                <Input value="Input 입력창 입니다"/>
                <Text text="Text 입니다 "/>
                <DatePicker />
                <Select />
                <DateRangeSelection />
                <StepInput />
            </l:VerticalLayout>
        </Panel>

        <Panel headerText="HorizontalLayout" expandable="true">
            <l:HorizontalLayout > <!-- HorizontalLayout : 세로 정렬 -->
                <!-- Input, Text, Stepinput, Select, DatePicker-->
                <Input value="Input 입력창 입니다" />
                <Text text="Text 입니다" />
                <DatePicker />
                <Select />
                <DateRangeSelection />
                <StepInput />
            </l:HorizontalLayout>
        </Panel>
        
        <!-- sap.ui.layout.form.Form -->
        <Panel headerText="Form" expandable="true" expanded="false">
            <f:Form id="FormChangeColumn_threeGroups234"
                editable="true">
                <f:title>
                    <core:Title text="Supplier" />
                </f:title>
                <f:layout>
                    <f:ColumnLayout
                        columnsM="2"
                        columnsL="3"
                        columnsXL="4"
                    />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer title="Address">
                        <f:formElements>					
                            <f:FormElement label="Name">
                                <f:fields>
                                    <Input value="{SupplierName}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Name">
                                <f:fields>
                                    <Input value="{SupplierName}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Name">
                                <f:fields>
                                    <Input value="{SupplierName}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Name">
                                <f:fields>
                                    <Input value="{SupplierName}"/>
                                </f:fields>
                            </f:FormElement>						
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
                <f:formContainers>
                    <f:FormContainer title="Group2">
                        <f:formElements>					
                            <f:FormElement label="Name">
                                <f:fields>
                                    <Input value="{SupplierName}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Name">
                                <f:fields>
                                    <Input value="{SupplierName}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Name">
                                <f:fields>
                                    <Input value="{SupplierName}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Name">
                                <f:fields>
                                    <Input value="{SupplierName}"/>
                                </f:fields>
                            </f:FormElement>						
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </Panel>

        <!-- sap.ui.layout.form.SimpleForm -->
        <Panel headerText="SimpleForm" expandable="true" expanded="false">    
            <f:SimpleForm id="SimpleFormDisplayColumn_threeGroups234"
                editable="false"
                layout="ColumnLayout"
                title="Supplier"
                columnsM="2"
                columnsL="2"
                columnsXL="2"
                >
                <f:content>
                    <core:Title text="Address" />
                    <Label text="Name" />
                    <Input value="{Name1}">
                        <layoutData>
                            <l:GridData span="XL2 L3 M4 S4"></l:GridData>
                        </layoutData>
                    </Input>
                    <Input value="{Name2}">
                        <layoutData>
                            <l:GridData span="XL2 L3 M4 S4"></l:GridData>
                        </layoutData>
                    </Input>
                    <Text id="nameText" text="{SupplierName}" />
                    <Label text="Street/No." />
                    <Text text="{Street} {HouseNumber}" />
                    <Label text="ZIP Code/City" />
                    <Text text="{ZIPCode} {City}" />
                    <Label text="Country" />
                    <Text id="countryText" text="{Country}" />
                    <Label text="Web" />
                    <Link text="Url" href="{Url}" />

                    <core:Title text="Contact" />
                    <Label text="Twitter" />
                    <Text text="{Twitter}" />
                    <Label text="Email" />
                    <Text text="{Email}" />
                    <Label text="Tel." />
                    <Text text="{Tel}" />

                    <core:Title text="Other" />
                    <Label text="SMS" />
                    <Text text="{Sms}" />
                    <Label text="Mobile" />
                    <Text text="{Mobile}" />
                    <Label text="Pager" />
                    <Text text="{Pager}" />
                    <Label text="Fax" />
                    <Text text="{Fax}" />
                </f:content>
            </f:SimpleForm>
        </Panel>

